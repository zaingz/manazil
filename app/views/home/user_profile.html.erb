    <div class=" line col-md-12">
      <div class="num col-md-1 col-xs-1 text-center">1</div>
      <div class="text col-md-10  col-xs-10">Update Profile</div>
      <div class="toggle col-md-1  col-xs-1 text-center">
        <a style="color: #3E4B58" role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          <%= fa_icon 'caret-down'%>
        </a>
      </div>









      <div class="col-md-12 ">
        <div class="collapse" id="collapseExample">

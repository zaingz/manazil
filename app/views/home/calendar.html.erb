<script>
    $(document).ready(function() {

        // page is now ready, initialize the calendar...

        $('#calendar').fullCalendar({
            events: [
                {
                    title  : 'event1',
                    start  : '2015-11-27'
                },
                {
                    title  : 'event2',
                    start  : '2015-11-03',
                    end    : '2015-11-05'
                },
                {
                    title  : 'event3',
                    start  : '2010-01-09T12:30:00',

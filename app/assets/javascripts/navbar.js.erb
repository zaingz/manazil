$( document ).ready(function() {


    //login modal shit
    $('#login-signup-box').slideUp(1);
    $('#login-modal-trigger').click(function(){ $('#login-signup-box').slideToggle(300); $('#login-signup-box2').slideUp(1);});

    $('#login-signup-box2').slideUp(1);
    $('#signup-modal-trigger').click(function(){ $('#login-signup-box2').slideToggle(300); $('#login-signup-box').slideUp(1);});


    //for login icons
    $('#l-menu').slideUp(1);
    $("#right-hamburger").click(function(){console.log('click'); $("#l-menu").slideToggle()});


    //for nav links
    $('#r-menu').slideUp(1);
    $("#left-hamburger").click(function(){console.log('click'); $("#r-menu").slideToggle()});


    $('#search-drop').slideUp(1);
    $("#sercho").click(function(){console.log('click'); $("#search-drop").slideToggle()});

    $("#signup-toggle").css("background-color", "#799a30");

    $('#login-toggle').click(function(){
        $('.signup-box').hide();
        $('.signin-box').show();
        $(this).css("background-color", "#799a30");
        $("#signup-toggle").css("background-color", "#60615F");

    });

    $('#signup-toggle').click(function(){
        $('.signup-box').show();
        $('.signin-box').hide();
        $(this).css("background-color", "#799a30");
        $("#login-toggle").css("background-color", "#60615F ");


    });

    $("#m-log").css("background-color", "#799a30 ");


    $('#m-log').click(function(){
        $('.signup-box').hide();
        $('.signin-box').show();
        $(this).css("background-color", "#799a30");
        $("#m-sign").css("background-color", "#60615F");

    });

    $('#m-sign').click(function(){
        $('.signup-box').show();
        $('.signin-box').hide();
        $(this).css("background-color", "#799a30");
        $("#m-log").css("background-color", "#60615F ");


    });






    $(window).resize(function(){

        if ($(window).width() <= 767) {


            var path = "<%= image_path('Manazil logo.svg')%>";

            $("#imigo").attr("src",path);
            console.log('imigo');
        }

        if ($(window).width() > 767) {


            var path = "<%= image_path('Manazil logo 2.svg')%>";

            $("#imigo").attr("src",path);

        }


    });




    if ($(window).width() <= 767) {


        var path = "<%= image_path('Manazil logo.svg')%>";

        $("#imigo").attr("src",path);
        console.log('imigo');
    }

    if ($(window).width() > 767) {

        $('#l-menu').slideUp(1);
        $('#r-menu').slideUp(1);
        var path = "<%= image_path('Manazil logo 2.svg')%>";


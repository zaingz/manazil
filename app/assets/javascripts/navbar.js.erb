
$(document).on('page:load', function(){
    $('#l-menu').slideUp(1);
    $('#r-menu').slideUp(1);
    $('#login-signup-box').slideUp(1);
    $("#right-hamburger").click(function(){console.log('click'); $("#l-menu").slideToggle()});
    $("#left-hamburger").click(function(){console.log('click'); $("#r-menu").slideToggle()});
    $('#login-modal-trigger').click(function(){ $('#login-signup-box').slideToggle(300); $('#login-signup-box2').slideUp(1);});

    $('#login-signup-box2').slideUp(1);
    $('#signup-modal-trigger').click(function(){ $('#login-signup-box2').slideToggle(300); $('#login-signup-box').slideUp(1);});

    $('#search-drop').slideUp(1);
    $("#sercho").click(function(){console.log('click'); $("#search-drop").slideToggle()});

});

$( document ).ready(function() {


    //login modal shit
    $('#login-signup-box').slideUp(1);
    $('#login-modal-trigger').click(function(){ $('#login-signup-box').slideToggle(300); $('#login-signup-box2').slideUp(1);});

    $('#login-signup-box2').slideUp(1);
    $('#signup-modal-trigger').click(function(){ $('#login-signup-box2').slideToggle(300); $('#login-signup-box').slideUp(1);});


    //for login icons
    $('#l-menu').slideUp(1);
    $("#right-hamburger").click(function(){console.log('click'); $("#l-menu").slideToggle()});


    //for nav links
    $('#r-menu').slideUp(1);
    $("#left-hamburger").click(function(){console.log('click'); $("#r-menu").slideToggle()});


    $('#search-drop').slideUp(1);
    $("#sercho").click(function(){console.log('click'); $("#search-drop").slideToggle()});

    $(window).resize(function(){

        if ($(window).width() <= 767) {


            var path = "<%= image_path('Manazil logo.svg')%>";

            $("#imigo").attr("src",path);
            console.log('imigo');
        }

        if ($(window).width() > 767) {


            var path = "<%= image_path('Manazil logo 2.svg')%>";

            $("#imigo").attr("src",path);

        }


    });




    if ($(window).width() <= 767) {


        var path = "<%= image_path('Manazil logo.svg')%>";

        $("#imigo").attr("src",path);
        console.log('imigo');
    }

    if ($(window).width() > 767) {

        $('#l-menu').slideUp(1);
        $('#r-menu').slideUp(1);

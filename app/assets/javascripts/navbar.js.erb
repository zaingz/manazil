            var path = "<%= image_path('Manazil logo.svg')%>";

            $("#imigo").attr("src",path);
            console.log('imigo');
        }

        if ($(window).width() > 767) {


            var path = "<%= image_path('Manazil logo 2.svg')%>";

            $("#imigo").attr("src",path);

        }


    });




    if ($(window).width() <= 767) {


        var path = "<%= image_path('Manazil logo.svg')%>";

        $("#imigo").attr("src",path);
        console.log('imigo');
    }

